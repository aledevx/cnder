@model CNDer.ViewModels.LoginVM;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <!-- Meta tags Obrigatórias -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- PNotify -->
      <link href='https://cdn.jsdelivr.net/npm/pnotify@4.0.0-beta.2/dist/PNotifyBrightTheme.min.css' rel="stylesheet">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

        <!--Modelo próprio-->
        <link href="~/vendors/site22.css" rel="stylesheet" type="text/css">
        <style>
            .navbar {
                
            }
            .h1 {
                font-family: Verdana, sans-serif;
            }
            .titulo{
                font-family: Verdana, sans-serif;
                text-align: center;
                border-radius: 5px;
                text-decoration: none;
                color: black;
                margin: 0;
                margin-top: -52px;
                
            }
            .teste{
                margin-top: 30px;
            }
            .cardB{
                background-color: #01A7FA;
                width: 450px;
                height: 490px;
                margin: 180px auto;                
            }
            .campos{
                width: 100%;
                height: 100%;
                margin-top: -20px;
            }
            body{
                    background-color: #F4F4F4;
                    background-attachment: 100%;
                    background-size: 1980px;
                    background-repeat: no-repeat;
                }

        </style>

        <title>Controle de Equipamentos TI</title>

        <!--Ícones-->
        <link href="~/vendors/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    </head>
    <body>

        <div id="login">
            <div class="card cardB">
                <div id="login-row" class="row justify-content-center align-items-center teste">
                    <div id="login-column" class="col-md-10">
                        <div id="login-box" class="col-md-12">
                            <form asp-action="Login">
                                
                                <!-- Controle em latim -->
                                <br>      
                                <a asp-controller="Home" asp-action="Index" style="text-decoration: none;"><h1 class="titulo text-center">
                                     <img src="/img/BrasaoGG.png" alt="" align="top" style="width: 150px; height: 180px;"><h1 class="text-center" style="color: black;">Teste</h1></h1></a>
                                <br>
                                <div class="campos">
                                    <div class="form-group">
                                        <label for="username" class="text">CPF:</label><br>
                                        <input type="text" required asp-for="Usuario" class="form-control cpf">
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="text">Senha:</label><br>
                                        <input type="password" required asp-for="Senha" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="remember-me" class="text"><span>Lembrar</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                        <input style="margin-top: -30px; margin-left: 250px; background-image: linear-gradient(to left,#04B404, #01DF01);" type="submit" name="submit" class="btn alg btn btn-lg text-dark " value="Entrar">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- JavaScript (Opcional) -->
        <!-- jQuery primeiro, depois Popper.js, depois Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
     <script src='https://cdn.jsdelivr.net/npm/pnotify@4.0.0-beta.2/dist/iife/PNotify.min.js'></script>   
  <script src='https://cdn.jsdelivr.net/npm/pnotify@4.0.0-beta.2/dist/iife/PNotifyButtons.min.js'></script>   
  <script src='https://cdn.jsdelivr.net/npm/pnotify@4.0.0-beta.2/dist/iife/PNotifyMobile.min.js'></script>   
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>  
   
      <script src="~/vendors/jquery.mask.min.js"></script>
                <!-- APP SCRIPTS -->
    <script src="~/vendors/site.js"></script>



    
        <!-- APP SCRIPTS -->
    <script src="~/vendors/swal.js"></script>
        <script>
        $(document).ready(function(){
            $('.cpf').mask('000.000.000-00', {reverse: true});
        });
    </script>
    </body>
</html>